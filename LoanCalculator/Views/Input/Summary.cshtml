@model LoanCalculator.Models.LoanCalculatorModel

@{
    ViewBag.Title = "Summary";
}

<h2>Summary</h2>

<div>
    <h4>LoanCalculatorModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LoanAmount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoanAmount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NumYears)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumYears)
        </dd>

        <dt>
            Interest
        </dt>

        <dd>
            @Model.calculateInterest()
        </dd>

        <dt>
            Monthly Payment
        </dt>

        <dd>
            @Model.getMonthlyPayment()
        </dd>

        <dt>
            Total Payment
        </dt>

        <dd>
            @Model.getTotalPayment()
        </dd>
    </dl>
</div>
<p>
    
    @Html.ActionLink("Re-enter Details", "Index")
</p>
